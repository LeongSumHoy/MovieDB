<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.sh.ot.moviedb.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/detailView"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="fill"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:phoneNumber="false" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/detailImageViewer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="3dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/release_date_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:elevation="5dp"
                            android:layout_gravity="left"
                            android:fontFamily="roboto-thin" />
                        <TextView
                            android:id="@+id/rate_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="roboto-thin"
                            android:textSize="15dp"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_gravity="left"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/plotView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/plot_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="roboto-condensed"
                        android:gravity="fill_vertical|fill"
                        android:layout_weight="1"
                        android:padding="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/trailerView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <!-- A CardView that contains a ImageView -->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_trailer_view"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

</RelativeLayout>
