<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MovieDetailActivity.MovieDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/accent_material_light"
                    android:textColor="#ffffff"
                    android:gravity="fill"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_gravity="center"
                    android:padding="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/detailImageViewer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="5dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_release_date"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:fontFamily="roboto-bold"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1" />
                            <TextView
                                android:id="@+id/release_date_textview"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:fontFamily="roboto-thin"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textAlignment="center"
                                android:layout_weight="1" />
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_rating"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:fontFamily="roboto-bold"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textAlignment="center"
                                android:layout_weight="1" />
                            <TextView
                                android:id="@+id/rate_textview"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="roboto-thin"
                                android:textSize="20dp"
                                android:layout_gravity="center"
                                android:gravity="fill_vertical"
                                android:textAlignment="center"
                                android:layout_weight="1" />
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/plot_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="roboto-condensed"
                        android:gravity="fill_vertical|fill"
                        android:layout_weight="1"
                        android:padding="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/trailer_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="roboto-condensed"
                        android:gravity="fill_vertical|fill"
                        android:layout_weight="1"
                        android:padding="10dp" />
                    <ImageView
                        android:id="@+id/trailer_ImageViewer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="5dp" />
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
</FrameLayout>